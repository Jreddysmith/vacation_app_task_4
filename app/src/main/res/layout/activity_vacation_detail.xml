<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/vacation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vacation Title"
            android:inputType="text"/>

        <EditText
            android:id="@+id/vacation_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hotel or Stay Location"
            android:inputType="text"/>

        <EditText
            android:id="@+id/vacation_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Date (YYYY-MM-DD)"
            android:focusable="false"
            android:inputType="date"/>

        <EditText
            android:id="@+id/vacation_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Date (YYYY-MM-DD)"
            android:focusable="false"
            android:inputType="date"/>

        <RadioGroup
            android:id="@+id/vacation_type_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/radio_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business" />

            <RadioButton
                android:id="@+id/radio_leisure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leisure" />
        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/excursion_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>


        <Button
            android:id="@+id/update_vacation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Vacation"
            android:textSize="18sp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/delete_vacation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Vacation"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:padding="12dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/set_alert_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Alert for Vacation"
            android:textSize="18sp"
            android:padding="12dp"
            android:backgroundTint="@android:color/holo_green_dark"/>
        <Button
            android:id="@+id/share_vacation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Vacation"
            android:textSize="18sp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/view_excursions_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Excursions"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>
